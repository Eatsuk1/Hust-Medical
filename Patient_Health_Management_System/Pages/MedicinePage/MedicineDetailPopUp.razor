@inject IMedicineService MedicineService

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Info" Class="mr-3 mb-n1" />
            Thông tin chi tiết
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@medicine.MedicineId" Label="Mã thuốc" ReadOnly="true" />
        <MudTextField Value="@medicine.Name" Label="Tên thuốc" ReadOnly="true" />
        <MudTextField Value="@medicine.Unit" Label="Đơn vị" ReadOnly="true" />
        <MudTextField Value="@medicine.SellingPrice" Label="Giá bán" ReadOnly="true" />
        <MudTextField Value="@medicine.QuantityDefault" Label="Mặc định mỗi ngày" ReadOnly="true" />
        <MudTextField Value="@medicine.HowToUse" Label="Cách dùng" ReadOnly="true" />
        <MudTextField Value="@medicine.GroupName" Label="Nhóm" ReadOnly="true" />
        <MudTextField Value="@medicine.ImportPrice" Label="Giá nhập" ReadOnly="true" />
        <MudTextField Value="@medicine.MinimumStock" Label="Tồn kho" ReadOnly="true" />
    </DialogContent>
</MudDialog>


@code {
    private Domain.Models.Medicine medicine = new Domain.Models.Medicine();

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        medicine = await MedicineService.GetMedicineById(Id);
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
