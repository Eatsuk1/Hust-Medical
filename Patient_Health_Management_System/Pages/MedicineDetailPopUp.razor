@inject IMedicineService MedicineService

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-3 mb-n1" />
            Xóa thuốc ?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@medicine.MedicineId" Label="Mã thuốc" ReadOnly="true" />
        <MudTextField Value="@medicine.Name" Label="Tên" ReadOnly="true" />
        <MudTextField Value="@medicine.Unit" Label="Đơn vị" ReadOnly="true" />
        <MudTextField Value="@medicine.SellingPrice" Label="Giá bán" ReadOnly="true" />
        <MudTextField Value="@medicine.QuantityDefault" Label="Tồn kho" ReadOnly="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error">Xóa thuốc</MudButton>
    </DialogActions>
</MudDialog>


@code {
    private Models.Medicine medicine = new Models.Medicine();

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        medicine = await MedicineService.GetMedicineById(Id);
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
