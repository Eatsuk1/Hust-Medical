<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Info" Class="mr-3 mb-n1" />
            Thông tin chi tiết
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@User.UserId" Label="Mã người dùng" ReadOnly="true" />
        <MudTextField Value="@User.Name" Label="Họ và tên" ReadOnly="true" />
        <MudTextField Value="@User.Gender" Label="Giới tính" ReadOnly="true" />
        <MudTextField Value="@User.Email" Label="Email" ReadOnly="true" />
        <MudTextField Value="@User.Address" Label="Địa chỉ" ReadOnly="true" />
        <MudTextField Value="@User.PhoneNumber" Label="Số điện thoại" ReadOnly="true" />
        <MudTextField Value="@User.Specialist" Label="Chuyên khoa" ReadOnly="true" />
    </DialogContent>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public Domain.Models.User User { get; set; }
}
